<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="master.macros['standard_feed']">
  <content_type xmlns="http://schemata.cenix-bioscience.com/content_type"
               name="application/vnd.everest+xml;type=locationTypeCollection"
               metal:fill-slot="content_type" />
  <content type="application/vnd.everest+xml;type=locationTypeMember"
           metal:fill-slot="content">
    <locationType xmlns="http://schemata.cenix-bioscience.com/location-type"
                  tal:define="total_locations len(member.locations)">
      <name tal:content="member.name">carrier slot</name>
      <link xmlns="http://www.w3.org/2005/Atom"
            tal:omit-tag="total_locations == 0"
            rel="http://relations.cenix-bioscience.com/location"
            type="application/atom+xml;type=feed"
            title="2" href="/locations?q=type:equal-to:&quot;carrier slot&quot;"
            tal:attributes="title total_locations;
                            href resource_to_url(member.locations, request)" />
    </locationType>
  </content>
</feed>
