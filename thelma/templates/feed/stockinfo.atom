<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="master.macros['standard_feed']">
  <content_type xmlns="http://schemata.cenix-bioscience.com/content_type"
               name="application/vnd.everest+xml;type=stockInfoCollection"
               metal:fill-slot="content_type" />
  <content type="application/vnd.everest+xml;type=stockInfoMember"
           metal:fill-slot="content">
    <stockInfo xmlns="http://schemata.cenix-bioscience.com/stock-info">
      <id tal:content="member.id">md11c50</id>
      <link xmlns="http://www.w3.org/2005/Atom"
            rel="http://relations.cenix-bioscience.com/molecule-design"
            type="application/atom+xml;type=entry"
            title="siRNA" href="/molecule-design/sirna"
            tal:attributes="title member.molecule_design.id;
                            href resource_to_url(member.molecule_design, request)" />

      <link xmlns="http://www.w3.org/2005/Atom"
            rel="http://relations.cenix-bioscience.com/molecule-type"
            type="application/atom+xml;type=entry"
            title="siRNA" href="/molecule-types/sirna"
            tal:attributes="title member.molecule_type.name;
                            href resource_to_url(member.molecule_type, request)" />
      <modification tal:content="member.modification">unmodified</modification>
      <totalTubes tal:content="member.total_tubes">3</totalTubes>
      <totalVolume unit="l"
        tal:content="member.total_volume">0.000256</totalVolume>
      <minVolume unit="l"
        tal:content="member.minimum_volume">3.4e-05</minVolume>
      <maxVolume unit="l"
        tal:content="member.maximum_volume">0.000182</maxVolume>
      <concentration unit="M"
        tal:content="member.concentration">5e-05</concentration>
      <genes>
        <tal:block tal:repeat="gene member.genes">
          <gene tal:content="string:${gene.accession}:${gene.locus_name}:${gene.species.acronym}"/>
        </tal:block>
      </genes>
    </stockInfo>
  </content>
</feed>
