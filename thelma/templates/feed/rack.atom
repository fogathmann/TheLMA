<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:l="http://schemata.cenix-bioscience.com/location"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="master.macros['standard_feed']">
  <content_type name="application/vnd.everest+xml;type=RackCollection"
                metal:fill-slot="content_type" />
  <content type="application/vnd.everest+xml;type=RackMember"
           metal:fill-slot="content">
    <rack xmlns="http://schemata.cenix-bioscience.com/rack">
      <label tal:content="member.label">label</label>
      <barcode tal:content="member.barcode">02454836</barcode>
      <comment tal:content="member.comment">My rack's comment</comment>
      <creation_date tal:content="rfc3339(member.creation_date)">2010-11-08T11:16:37+01:00</creation_date>
       <status>
               <link xmlns="http://schemata.cenix-bioscience.com/itemstatus"
                tal:omit-tag="member.status is None"
                rel="http://relations.cenix-bioscience.com/item-status"
                title="Managed" href="/item-statuses/managed"
                    tal:attributes="title member.status.title;
                            href resource_to_url(member.status, request)" />
       </status>
        <l:location tal:omit-tag="member.location is None" xmlns:l="http://schemata.cenix-bioscience.com/location">
           <l:link
            rel="http://relations.cenix-bioscience.com/location"
            title="c4s2" href="/locations/c4s2"
            tal:omit-tag="member.location is None"
            tal:attributes="title member.location.title;
                            href resource_to_url(member.location, request)" />
         </l:location>
       <total_containers tal:content="member.total_containers">33</total_containers>
      <specs>
          <link xmlns="http://schemata.cenix-bioscience.com/rackspecs"
                    rel="http://relations.cenix-bioscience.com/rack-specs"
                    title="Abgene 96 tube rack (1.4 ml)" href="/rack-specs/abgene1400"
                    tal:omit-tag="member.specs is None"
                     tal:attributes="title member.specs.title;
                            href resource_to_url(member.specs, request)" />
       </specs>
    </rack>
  </content>
</feed>
