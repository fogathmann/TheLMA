<?xml version="1.0" encoding="utf-8"?>
<entry xmlns="http://www.w3.org/2005/Atom"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="master.macros['standard_entry']">
  <content type="application/vnd.everest+xml;type=moleculeTypeMember"
           metal:fill-slot="content">
    <moleculeType xmlns="http://schemata.cenix-bioscience.com/molecule-type">
      <id tal:content="context.id">AMPLICON</id>
      <name tal:content="context.name">Amplicon</name>
      <description tal:content="context.description">Long description</description>
      <thawTime tal:content="context.thaw_time" unit="s">0</thawTime>
      <tal:block tal:repeat="modification context.modifications">
      <modification name="unmodified" tal:attributes="name modification.name" />
      </tal:block>
    </moleculeType>
  </content>
</entry>