<?xml version="1.0" encoding="utf-8"?>
<entry xmlns="http://www.w3.org/2005/Atom"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="master.macros['standard_entry']">
  <content type="application/vnd.everest+xml;type=deviceMember"
           metal:fill-slot="content">
    <device xmlns="http://schemata.cenix-bioscience.com/device"
            tal:define="total_locations len(context.locations)">
      <label tal:content="context.label">Stockfreezer 1</label>
      <link xmlns="http://www.w3.org/2005/Atom"
            tal:omit-tag="context.type is None"
            rel="http://relations.cenix-bioscience.com/device-type"
            type="application/atom+xml;type=entry"
            title="freezer" href="/device-types/freezer"
            tal:attributes="title context.type.title;
                            href resource_to_url(context.type, request)" />
      <link xmlns="http://www.w3.org/2005/Atom"
            tal:omit-tag="total_locations == 0"
            rel="http://relations.cenix-bioscience.com/location"
            type="application/atom+xml;type=feed"
            title="2" href="/locations?q=device:equal-to:/devices/stockfreezer-1"
            tal:attributes="title total_locations;
                            href resource_to_url(context.locations., request)" />
      <link xmlns="http://www.w3.org/2005/Atom"
            rel="http://relations.cenix-bioscience.com/organization"
            type="application/atom+xml;type=entry"
            title="ABI" href="/organizations/abi"
            tal:omit-tag="context.manufacturer is None"
            tal:attributes="title context.manufacturer.title;
                            href resource_to_url(context.manufacturer, request)" />
      <model tal:content="context.model">Liebherr GTS 6112</model>
    </device>
  </content>
</entry>