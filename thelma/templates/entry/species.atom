<?xml version="1.0" encoding="utf-8"?>
<entry xmlns="http://www.w3.org/2005/Atom"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="master.macros['standard_entry']">
  <content type="application/vnd.everest+xml;type=speciesMember"
           metal:fill-slot="content">
    <species xmlns="http://schemata.cenix-bioscience.com/species"
             tal:define="total_genes len(context.genes)">
      <genusName tal:content="context.genus_name">Homo</genusName>
      <speciesName tal:content="context.species_name">sapiens</speciesName>
      <commonName tal:content="context.common_name">human</commonName>
      <acronym tal:content="context.acronym">HS</acronym>
      <ncbiTaxId tal:content="context.ncbi_tax_id">9606</ncbiTaxId>
      <link xmlns="http://www.w3.org/2005/Atom"
            tal:omit-tag="total_genes == 0"
            rel="http://relations.cenix-bioscience.com/gene"
            type="application/atom+xml;type=feed"
            title="2" href="/genes?q=species=http://localhost/species/rat"
            tal:attributes="title total_genes;
                            href resource_to_url(context.genes, request)" />
    </species>
  </content>
</entry>