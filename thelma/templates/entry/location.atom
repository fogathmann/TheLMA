<?xml version="1.0" encoding="utf-8"?>
<entry xmlns="http://www.w3.org/2005/Atom"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="master.macros['standard_entry']">
  <content type="application/vnd.everest+xml;type=locationMember"
           metal:fill-slot="content">
    <location xmlns="http://schemata.cenix-bioscience.com/location">
      <barcode tal:content="context.barcode">02489876</barcode>
      <label tal:content="context.label">c4s2</label>
      <type tal:content="context.type">carrier slot</type>
      <link xmlns="http://www.w3.org/2005/Atom"
            tal:omit-tag="context.rack is None"
            rel="http://relations.cenix-bioscience.com/rack"
            type="application/atom+xml;type=entry"
            title="02454234 - the rack's label"
            href="/racks/02454234"
            tal:attributes="title context.rack.title;
                            href resource_to_url(context.rack, request)" />
      <link xmlns="http://www.w3.org/2005/Atom"
            tal:omit-tag="context.device is None"
            rel="http://relations.cenix-bioscience.com/device"
            type="application/atom+xml;type=entry"
            title="Stockfreezer 1" href="/device/stockfreezer-1"
            tal:attributes="title context.device.label;
                            href resource_to_url(context.device, request)" />
      <deviceIndex tal:condition="context.device_index"
                   tal:content="context.device_index">5</deviceIndex>
    </location>
  </content>
</entry>