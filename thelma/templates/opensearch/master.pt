<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:cql="http://xml.cenix-bioscience.com/namespaces/cql"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:define-macro="standard_opensearch">

  <ShortName>Search for ${context.title}</ShortName>
  <Description>${context.description}</Description>

  <Url type="application/atom+xml;type=feed" rel="results"
       template="${context.get_url(request)}?q={searchTerms}&amp;start={start}&amp;size={size}" />

  <Image height="64" width="64" type="image/png">${image_url}</Image>

  <tal:block metal:define-slot="cqlCriteria" />
</OpenSearchDescription>