<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:cql="http://xml.cenix-bioscience.com/namespaces/cql"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="master.macros['standard_opensearch']">

    <tal:block metal:fill-slot="cqlCriteria">
    <cql:Criterion type="text" name="genus-name" title="Genus Name"
                   restrict="a-zA-Z0-9 " />
    <cql:Criterion type="text" name="species-name" title="Species Name"
                   restrict="a-zA-Z0-9 " />
    <cql:Criterion type="text" name="common-name" title="Common Name"
                   restrict="a-zA-Z0-9 " />
    <cql:Criterion type="text" name="acronym" title="Acronym"
                   restrict="A-Z" />
    </tal:block>
</OpenSearchDescription>