<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:cql="http://xml.cenix-bioscience.com/namespaces/cql"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="master.macros['standard_opensearch']">

    <tal:block metal:fill-slot="cqlCriteria">
    <cql:Criterion type="number" name="molecule-design-id"
                   title="Molecule Design ID" />
    <cql:Criterion type="text" name="genes" sortable="false"
                   title="Targeted Gene Accession" restrict="a-zA-Z0-9 "/>
    <cql:Criterion type="number" name="total-tubes" 
                   title="Total Tubes" />
    <cql:Criterion type="number" name="total-volume" 
                   title="Total Volume" unit="l" />
    <cql:Criterion type="number" name="minimum-volume" 
                   title="Sample Minimum Volume" unit="l" />
    <cql:Criterion type="number" name="maximum-volume" 
                   title="Sample Maximum Volume" unit="l" />
    <cql:Criterion type="number" name="concentration" 
                   title="Sample Molecule Concentration" unit="M" />
    <cql:Criterion type="application/atom+xml;type=feed" 
                   name="molecule-type" title="Molecule Type"
                   href="${view.get_collection_url('molecule-types')}">
    <cql:Criterion type="text" name="modification" title="Modification"
                   restrict="a-zA-Z0-9 '-()," parent="molecule-type" />
    </cql:Criterion>
    </tal:block>
</OpenSearchDescription>