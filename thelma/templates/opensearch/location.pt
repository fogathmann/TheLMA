<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:cql="http://xml.cenix-bioscience.com/namespaces/cql"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="master.macros['standard_opensearch']">

    <tal:block metal:fill-slot="cqlCriteria">
    <cql:Criterion type="text" name="barcode" title="Barcode" />
    <cql:Criterion type="text" name="label" title="Label" />
    <cql:Criterion type="application/atom+xml;type=feed"
                   name="type" title="Type"
                   href="${view.get_collection_url('location-types')}" />
    <cql:Criterion type="text" name="rack" title="Rack Barcode" />
    <cql:Criterion type="boolean" name="empty" title="Empty" />
    </tal:block>
</OpenSearchDescription>