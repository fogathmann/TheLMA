<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:cql="http://xml.cenix-bioscience.com/namespaces/cql"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="master.macros['standard_opensearch']">

    <tal:block metal:fill-slot="cqlCriteria">
    <cql:Criterion type="text" name="barcode" title="Tube Barcode" />
    <cql:Criterion type="text" name="design" title="Sample Molecule Design" />
    <cql:Criterion type="number" name="volume" title="Sample Volume" />
    <cql:Criterion type="number" name="concentration" title="Sample Molecule Concentration" />
    <cql:Criterion type="text" name="rack" title="Rack Barcode" />
    <cql:Criterion type="application/atom+xml;type=feed"
                   name="specs" title="Tube Specs"
                   href="${view.get_collection_url('tube-specs')}"/>
    <cql:Criterion type="application/atom+xml;type=feed"
                   name="status" title="Status"
                   href="${view.get_collection_url('item-statuses')}"/>
    </tal:block>
</OpenSearchDescription>