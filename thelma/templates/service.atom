<?xml version="1.0" encoding='utf-8'?>
<service xmlns="http://www.w3.org/2007/app"
         xmlns:tal="http://xml.zope.org/namespaces/tal"
         xmlns:atom="http://www.w3.org/2005/Atom"
         xmlns:opensearch="http://a9.com/-/spec/opensearch/1.1/">
  <workspace>
    <atom:title>TheLMA</atom:title>
    <tal:block tal:repeat="collection context">
    <collection
        href="http://example.org/racks"
        tal:attributes="href resource_to_url(collection, request)"
        tal:define="imgurl static_url('thelma:templates/static/images/%s.png' %
                                      collection.__name__, request)">
      <atom:title tal:content="collection.title">Racks</atom:title>
      <atom:subtitle tal:content="collection.description">
        A long description for the collection
      </atom:subtitle>
      <opensearch:Image tal:content="imgurl"
                        height="64" width="64"
                        type="image/png">
          http://localhost/feed.png
          </opensearch:Image>
    </collection>
    </tal:block>
  </workspace>
</service>