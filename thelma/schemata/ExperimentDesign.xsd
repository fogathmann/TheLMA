<?xml version="1.0" encoding="UTF-8"?>
<schema
    targetNamespace="http://schemata.thelma.org/experimentdesign"
    elementFormDefault="qualified"
    xmlns="http://www.w3.org/2001/XMLSchema"
    xmlns:e="http://schemata.thelma.org/experiment"
    xmlns:ed="http://schemata.thelma.org/experimentdesign"
    xmlns:edr="http://schemata.thelma.org/experimentdesignrack"
    xmlns:rs="http://schemata.thelma.org/rackshape"
    xmlns:sh="http://schemata.thelma.org/shared"
    xmlns:ep="http://schemata.thelma.org/experimentmetadata"
>
    <import
        schemaLocation="Shared.xsd"
        namespace="http://schemata.thelma.org/shared"
    >
    </import>
    <import
        schemaLocation="RackShape.xsd"
        namespace="http://schemata.thelma.org/rackshape"
    >
    </import>
    <import
        schemaLocation="ExperimentDesignRack.xsd"
        namespace="http://schemata.thelma.org/experimentdesignrack"
    >
    </import>
    <import
        schemaLocation="Experiment.xsd"
        namespace="http://schemata.thelma.org/experiment"
    >
    </import>
    <import
        schemaLocation="ExperimentMetaData.xsd"
        namespace="http://schemata.thelma.org/experimentmetadata"
    >
    </import>

    <complexType
        name="ExperimentDesignType"
    >
        <complexContent>
            <extension
                base="sh:ResourceType"
            >
                <choice>
                    <element
                        name="link"
                        type="ed:ExperimentDesignLinkType"
                    ></element>
                    <sequence>
                        <element
                            ref="rs:rack_shape"
                            minOccurs="1"
                            maxOccurs="1"
                        >
                        </element>
                        <element
                            ref="edr:experiment_design_racks"
                            maxOccurs="1"
                            minOccurs="1"
                        >
                        </element>
                        <element
                            ref="e:experiments"
                            maxOccurs="1"
                            minOccurs="0"
                        >
                        </element>
                        <element
                            ref="ep:experiment_metadata"
                            maxOccurs="1"
                            minOccurs="0"
                        >
                        </element>
                    </sequence>
                </choice>
            </extension>
        </complexContent>
    </complexType>

    <complexType
        name="ExperimentDesignCollectionType"
    >
         <choice>
             <element
                 ref="ed:experiment_design"
                 maxOccurs="unbounded"
                 minOccurs="0"
             >
             </element>
             <element
                 name="link"
                 type="ed:ExperimentDesignCollectionLinkType"
                 maxOccurs="1"
                 minOccurs="0"
             >
             </element>
         </choice>

    </complexType>

    <complexType
        name="ExperimentDesignLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/experiment-design"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <complexType
        name="ExperimentDesignCollectionLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/experiment-design-collection"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <element
        name="experiment_design"
        type="ed:ExperimentDesignType"
    >
    </element>

    <element
        name="experiment_designs"
        type="ed:ExperimentDesignCollectionType"
    ></element>

</schema>