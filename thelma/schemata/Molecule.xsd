<?xml version="1.0" encoding="UTF-8"?>
<schema
    targetNamespace="http://schemata.thelma.org/molecule"
    elementFormDefault="qualified"
    xmlns="http://www.w3.org/2001/XMLSchema"
    xmlns:md="http://schemata.thelma.org/moleculedesign"
    xmlns:mo="http://schemata.thelma.org/molecule"
    xmlns:sh="http://schemata.thelma.org/shared"
    xmlns:s="http://schemata.thelma.org/sample"
    xmlns:o="http://schemata.thelma.org/organization"
>

    <import
        schemaLocation="MoleculeDesign.xsd"
        namespace="http://schemata.thelma.org/moleculedesign"
    >
    </import>
    <import
        schemaLocation="Sample.xsd"
        namespace="http://schemata.thelma.org/sample"
    >
    </import>
    <import
        schemaLocation="Shared.xsd"
        namespace="http://schemata.thelma.org/shared"
    >
    </import>
    <import
        schemaLocation="Organization.xsd"
        namespace="http://schemata.thelma.org/organization"
    >
    </import>

    <complexType
        name="MoleculeType"
    >
        <complexContent>
            <extension
                base="sh:ResourceType"
            >
                <choice>
                    <element
                        name="link"
                        type="mo:MoleculeLinkType"
                    >
                    </element>
                    <sequence>
                        <element
                            ref="md:molecule_design"
                            minOccurs="1"
                            maxOccurs="1"
                        ></element>
                        <element
                            name="supplier"
                            type="o:OrganizationType"
                            minOccurs="1"
                            maxOccurs="1"
                        ></element>
                        <element
                            name="product_id"
                            type="string"
                        ></element>
                        <element
                            name="insert_date"
                            type="date"
                            maxOccurs="1"
                        ></element>
                        <element
                            ref="s:samples"
                            minOccurs="1"
                            maxOccurs="1"
                        ></element>
                    </sequence>
                </choice>
            </extension>
        </complexContent>
    </complexType>

    <complexType
        name="MoleculeCollectionType"
    >
         <choice>
             <element
                 ref="mo:molecule"
                 maxOccurs="unbounded"
                 minOccurs="0"
             >
             </element>
             <element
                 name="link"
                 type="mo:MoleculeCollectionLinkType"
                 maxOccurs="1"
                 minOccurs="0"
             >
             </element>
         </choice>
    </complexType>

    <complexType
        name="MoleculeLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/molecule"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <complexType
        name="MoleculeCollectionLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/molecule-collection"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <element
        name="molecule"
        type="mo:MoleculeType"
    >
    </element>

    <element
        name="molecules"
        type="mo:MoleculeCollectionType"
    ></element>

</schema>