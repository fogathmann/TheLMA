<?xml version="1.0" encoding="UTF-8"?>
<schema
    targetNamespace="http://schemata.thelma.org/experiment"
    elementFormDefault="qualified"
    xmlns="http://www.w3.org/2001/XMLSchema"
    xmlns:e="http://schemata.thelma.org/experiment"
    xmlns:er="http://schemata.thelma.org/experimentrack"
    xmlns:ed="http://schemata.thelma.org/experimentdesign"
    xmlns:emt="http://schemata.thelma.org/experimentmetadatatype"
    xmlns:r="http://schemata.thelma.org/rack"
    xmlns:sh="http://schemata.thelma.org/shared"
    xmlns:rsp="http://schemata.thelma.org/rackspecs"
    xmlns:j="http://schemata.thelma.org/job"
>
    <import
        schemaLocation="Shared.xsd"
        namespace="http://schemata.thelma.org/shared"
    >
    </import>

    <import
        schemaLocation="ExperimentDesign.xsd"
        namespace="http://schemata.thelma.org/experimentdesign"
    >
    </import>
    <import
        schemaLocation="ExperimentMetaDataType.xsd"
        namespace="http://schemata.thelma.org/experimentmetadatatype"
    >
    </import>
    <import
        schemaLocation="ExperimentRack.xsd"
        namespace="http://schemata.thelma.org/experimentrack"
    >
    </import>
    <import
        schemaLocation="Rack.xsd"
        namespace="http://schemata.thelma.org/rack"
    >
    </import>
    <import
        schemaLocation="RackSpecs.xsd"
        namespace="http://schemata.thelma.org/rackspecs"
    >
    </import>
    <import
        schemaLocation="Job.xsd"
        namespace="http://schemata.thelma.org/job"
    >
    </import>

    <complexType
        name="ExperimentType"
    >
        <complexContent>
            <extension
                base="sh:ResourceType"
            >
                <choice>
                    <element
                        name="link"
                        type="e:ExperimentLinkType"
                    >
                    </element>
                    <sequence>
                        <element
                            name="label"
                            type="string"
                            minOccurs="1"
                            maxOccurs="1"
                        >
                        </element>
                        <element
                            name="source_rack"
                            type="r:RackType"
                            minOccurs="0"
                            maxOccurs="1"
                        >
                        </element>
                        <element
                            ref="ed:experiment_design"
                            minOccurs="1"
                            maxOccurs="1"
                        >
                        </element>
                        <element
                            ref="er:experiment_racks"
                            minOccurs="0"
                            maxOccurs="1"
                        >
                        </element>
                        <element
                            ref="j:experiment_job"
                            maxOccurs="1"
                            minOccurs="0"
                        >
                        </element>
                        <element
                        	ref="emt:experiment_metadata_type"
                        >
                        </element>
                    </sequence>
                </choice>
            </extension>
        </complexContent>
    </complexType>

    <complexType
        name="ExperimentCollectionType"
    >
        <sequence
            maxOccurs="unbounded"
            minOccurs="0"
        >
            <choice>
                <element
                    name="link"
                    type="e:ExperimentCollectionLinkType"
                    maxOccurs="1"
                    minOccurs="0"
                >
                </element>
                <element
                    ref="e:experiment"
                    maxOccurs="unbounded"
                    minOccurs="0"
                >
                </element>
            </choice>
        </sequence>
    </complexType>

    <complexType
        name="ExperimentLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/experiment"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <complexType
        name="ExperimentCollectionLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/experiment-collection"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <element
        name="experiment"
        type="e:ExperimentType"
    >
    </element>

    <element
        name="experiments"
        type="e:ExperimentCollectionType"
    ></element>

</schema>