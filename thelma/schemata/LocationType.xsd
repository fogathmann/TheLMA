<?xml version="1.0" encoding="UTF-8"?>
<schema
    targetNamespace="http://schemata.thelma.org/locationtype"
    elementFormDefault="qualified"
    xmlns="http://www.w3.org/2001/XMLSchema"
    xmlns:lt="http://schemata.thelma.org/locationtype"
    xmlns:l="http://schemata.thelma.org/location"
    xmlns:sh="http://schemata.thelma.org/shared"
>
    <import
        schemaLocation="Shared.xsd"
        namespace="http://schemata.thelma.org/shared"
    >
    </import>
    <import
        schemaLocation="Location.xsd"
        namespace="http://schemata.thelma.org/location"
    >
    </import>

    <complexType
        name="LocationTypeType"
    >
        <complexContent>
            <extension
                base="sh:ResourceType"
            >
                <choice>
                    <element
                        name="link"
                        type="lt:LocationTypeLinkType"
                    >
                    </element>
                    <sequence>
                        <element
                            name="name"
                            type="string"
                        >
                        </element>
                        <element
                            ref="l:locations"
                        >
                        </element>
                     </sequence>
                </choice>
            </extension>
        </complexContent>
    </complexType>

    <complexType
        name="LocationTypeCollectionType"
    >
         <choice>
             <element
                 ref="lt:location_type"
                 maxOccurs="unbounded"
                 minOccurs="0"
             >
             </element>
             <element
                 name="link"
                 type="lt:LocationTypeCollectionLinkType"
                 maxOccurs="1"
                 minOccurs="0"
             >
             </element>
         </choice>
    </complexType>

    <complexType
        name="LocationTypeLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/location-type"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <complexType
        name="LocationTypeCollectionLinkType"
    >
        <complexContent>
            <restriction
                base="sh:LinkType"
            >
                <attribute
                    name="rel"
                    type="string"
                    fixed="http://relations.thelma.org/location-type-collection"
                ></attribute>
            </restriction>
        </complexContent>
    </complexType>

    <element
        name="location_type"
        type="lt:LocationTypeType"
    >
    </element>

    <element
        name="location_types"
        type="lt:LocationTypeCollectionType"
    ></element>

</schema>